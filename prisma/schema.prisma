generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URI")
}

model Product {
  id               Int     @id @default(autoincrement())
  itemName         String
  currentStore     String
  storeID          String
  stockQty         Int
  daysUntilExpiry  Int
  recommendation   String
  actionQty        Float?
  actionPct        String?
  targetStore      String?
  transferQty      Float?
}
